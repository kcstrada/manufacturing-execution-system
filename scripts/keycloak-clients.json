        "consentRequired": false,
        "config": {
          "userinfo.token.claim": "true",
          "user.attribute": "worker_id",
          "id.token.claim": "true",
          "access.token.claim": "true",
          "claim.name": "worker_id",
          "jsonType.label": "String"
        }
      }
    ],
    "defaultClientScopes": [
      "web-origins",
      "profile",
      "roles",
      "email"
    ],
    "optionalClientScopes": [
      "address",
      "phone",
      "offline_access",
      "microprofile-jwt"
    ]
  }
]