{
  "name": "frontend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "admin-portal",
    "user-portal",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:admin & npm run dev:user",
    "dev:admin": "npm run dev --workspace=admin-portal",
    "dev:user": "npm run dev --workspace=user-portal",
    "build": "npm run build:admin && npm run build:user",
    "build:admin": "npm run build --workspace=admin-portal",
    "build:user": "npm run build --workspace=user-portal",
    "start": "npm run start:admin & npm run start:user",
    "start:admin": "npm run start --workspace=admin-portal",
    "start:user": "npm run start --workspace=user-portal",
    "lint": "npm run lint:admin && npm run lint:user",
    "lint:admin": "npm run lint --workspace=admin-portal",
    "lint:user": "npm run lint --workspace=user-portal",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf admin-portal/.next user-portal/.next admin-portal/node_modules user-portal/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0"
  }
}