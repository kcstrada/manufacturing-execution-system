{
  "name": "@mes/ui",
  "version": "1.0.0",
  "private": true,
  "description": "Shared UI component library for Manufacturing Execution System",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./components": "./src/components/index.ts",
    "./components/layout": "./src/components/layout/index.ts",
    "./components/navigation": "./src/components/navigation/index.ts",
    "./components/data-display": "./src/components/data-display/index.ts",
    "./components/forms": "./src/components/forms/index.ts",
    "./components/feedback": "./src/components/feedback/index.ts",
    "./components/manufacturing": "./src/components/manufacturing/index.ts",
    "./hooks": "./src/hooks/index.ts",
    "./utils": "./src/utils/index.ts",
    "./styles": "./src/styles/index.ts"
  },
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "clsx": "^2.1.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-onboarding": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "daisyui": "^4.12.10",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^9.1.5",
    "jsdom": "^27.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^9.1.5",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "typescript",
    "daisyui",
    "tailwind",
    "manufacturing",
    "mes"
  ],
  "author": "MES Team",
  "license": "MIT",
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
