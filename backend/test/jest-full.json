{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": "(src|test)/.*\\.(spec|test|e2e-spec)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "isolatedModules": true
    }]
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.entity.ts",
    "!src/**/index.ts",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!src/database/migrations/*.ts",
    "!src/database/seeds/*.ts",
    "!src/database/data-source.ts",
    "!src/config/*.ts",
    "!src/**/constants/**",
    "!src/**/enums/**",
    "!src/**/types/**"
  ],
  "coverageDirectory": "./coverage/full",
  "coverageReporters": ["json", "lcov", "text", "text-summary", "html", "json-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "verbose": false,
  "detectOpenHandles": true,
  "forceExit": true,
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}