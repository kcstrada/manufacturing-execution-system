{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": "test/.*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.entity.ts",
    "!src/**/index.ts",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!src/database/migrations/*.ts",
    "!src/database/seeds/*.ts",
    "!src/database/data-source.ts",
    "!src/config/*.ts"
  ],
  "coverageDirectory": "./coverage/integration",
  "coverageReporters": ["json", "lcov", "text", "text-summary", "html", "json-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "verbose": true,
  "detectOpenHandles": true,
  "forceExit": true
}