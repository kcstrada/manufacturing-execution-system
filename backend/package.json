{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./jest.config.js",
    "test:watch": "jest --config ./jest.config.js --watch",
    "test:cov": "jest --config ./jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "test:integration": "jest --config ./test/jest-integration.json",
    "test:integration:watch": "jest --config ./test/jest-integration.json --watch",
    "test:integration:cov": "jest --config ./test/jest-integration.json --coverage",
    "test:repositories": "jest --config ./jest.repository.config.js",
    "test:repositories:cov": "jest --config ./jest.repository.config.js --coverage",
    "test:all:cov": "npm run test:cov && npm run test:integration:cov && npm run test:repositories:cov && npm run test:e2e:cov",
    "test:full:cov": "jest --config ./test/jest-full.json --coverage",
    "test:auth": "jest --config ./test/jest-integration.json test/auth",
    "coverage:report": "npm run test:full:cov && open coverage/full/index.html",
    "coverage:check": "npm run test:full:cov",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/database/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/database/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create src/database/migrations/Migration",
    "migration:show": "npm run typeorm -- migration:show -d src/database/data-source.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/database/data-source.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d src/database/data-source.ts",
    "schema:log": "npm run typeorm -- schema:log -d src/database/data-source.ts",
    "seed": "ts-node src/database/seeds/run-seed.ts",
    "db:reset": "npm run migration:revert && npm run migration:run && npm run seed",
    "fga:migrate": "echo 'OpenFGA migration placeholder'",
    "fga:seed": "echo 'OpenFGA seed placeholder'",
    "fga:model:apply": "echo 'OpenFGA model apply placeholder'"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bull": "^11.0.3",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.6",
    "@openfga/sdk": "^0.9.0",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/ioredis": "^4.28.10",
    "@types/morgan": "^1.9.10",
    "@types/passport-jwt": "^4.0.1",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "cache-manager": "^7.2.0",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "keycloak-connect": "^26.1.1",
    "morgan": "^1.10.1",
    "nest-keycloak-connect": "^1.10.1",
    "nest-winston": "^1.10.2",
    "nestjs-cls": "^6.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.26",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
