{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "reporter": ["text", "lcov", "html", "json-summary"],
  "report-dir": "./coverage/nyc",
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80,
  "watermarks": {
    "lines": [80, 95],
    "functions": [80, 95],
    "branches": [80, 95],
    "statements": [80, 95]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.interface.ts",
    "**/index.ts",
    "**/*.module.ts",
    "**/*.dto.ts",
    "**/*.entity.ts",
    "**/migrations/**",
    "**/seeds/**",
    "**/constants/**",
    "**/enums/**",
    "**/types/**",
    "**/*.config.ts",
    "**/data-source.ts",
    "src/main.ts",
    "test/**",
    "coverage/**",
    "dist/**",
    "node_modules/**"
  ]
}